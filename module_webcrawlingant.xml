<?xml version="1.0" encoding="UTF-8"?>
<project name="module_webcrawlingant" default="compile.module.webcrawlingant">
  <dirname property="module.webcrawlingant.basedir" file="${ant.file.module_webcrawlingant}"/>
  
  <property name="module.jdk.home.webcrawlingant" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.webcrawlingant" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.webcrawlingant" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.webcrawlingant" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="webcrawlingant.output.dir" value="${module.webcrawlingant.basedir}/AntBuild/production/WebCrawlingAnt"/>
  <property name="webcrawlingant.testoutput.dir" value="${module.webcrawlingant.basedir}/AntBuild/test/WebCrawlingAnt"/>

  <property name="webcrawlingant.output.jar.dir" value="${module.webcrawlingant.basedir}/AntBuild/jar"/>
  
  <path id="webcrawlingant.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="webcrawlingant.module.production.classpath">
    <path refid="${module.jdk.classpath.webcrawlingant}"/>
    <path refid="library.commons-csv-1.1.classpath"/>
    <path refid="library.commons-collections4-4.0.classpath"/>
    <path refid="library.jsoup-1.8.2.classpath"/>
  </path>
  
  <path id="webcrawlingant.runtime.production.module.classpath">
    <pathelement location="${webcrawlingant.output.dir}"/>
    <path refid="library.commons-csv-1.1.classpath"/>
    <path refid="library.commons-collections4-4.0.classpath"/>
    <path refid="library.jsoup-1.8.2.classpath"/>
  </path>
  
  <path id="webcrawlingant.module.classpath">
    <path refid="${module.jdk.classpath.webcrawlingant}"/>
    <pathelement location="${webcrawlingant.output.dir}"/>
    <path refid="library.commons-csv-1.1.classpath"/>
    <path refid="library.commons-collections4-4.0.classpath"/>
    <path refid="library.jsoup-1.8.2.classpath"/>
  </path>
  
  <path id="webcrawlingant.runtime.module.classpath">
    <pathelement location="${webcrawlingant.testoutput.dir}"/>
    <pathelement location="${webcrawlingant.output.dir}"/>
    <path refid="library.commons-csv-1.1.classpath"/>
    <path refid="library.commons-collections4-4.0.classpath"/>
    <path refid="library.jsoup-1.8.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.webcrawlingant">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.webcrawlingant">
    <patternset refid="excluded.from.module.webcrawlingant"/>
  </patternset>
  
  <path id="webcrawlingant.module.sourcepath">
    <dirset dir="${module.webcrawlingant.basedir}">
      <include name="src/com/tkk/webCrawling"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.webcrawlingant" depends="compile.module.webcrawlingant.production,compile.module.webcrawlingant.tests" description="Compile module WebCrawlingAnt"/>
  
  <target name="compile.module.webcrawlingant.production" depends="register.custom.compilers" description="Compile module WebCrawlingAnt; production classes">
    <mkdir dir="${webcrawlingant.output.dir}"/>
    <javac2 destdir="${webcrawlingant.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.webcrawlingant}/javac">
      <compilerarg line="${compiler.args.webcrawlingant}"/>
      <bootclasspath refid="webcrawlingant.module.bootclasspath"/>
      <classpath refid="webcrawlingant.module.production.classpath"/>
      <src refid="webcrawlingant.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.webcrawlingant"/>
    </javac2>
    
    <copy todir="${webcrawlingant.output.dir}">
      <fileset dir="${module.webcrawlingant.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.webcrawlingant.tests" depends="register.custom.compilers,compile.module.webcrawlingant.production" description="compile module WebCrawlingAnt; test classes" unless="skip.tests"/>
  
  <target name="clean.module.webcrawlingant" description="cleanup module">
    <delete dir="${webcrawlingant.output.dir}"/>
    <delete dir="${webcrawlingant.testoutput.dir}"/>
  </target>

  <property name="mainClass" value="com.tkk.webCrawling.WebCrawlingMain"/>

  <target name="jar.module.webcrawlingant.production" depends="compile.module.webcrawlingant.production" description="make module jar">
    <mkdir dir="${webcrawlingant.output.jar.dir}"/>
    <jar destfile="${webcrawlingant.output.jar.dir}/${ant.project.name}_production.jar" basedir="${webcrawlingant.output.dir}">
      <manifest>
        <attribute name="Main-Class" value="${mainClass}"/>
        <attribute name="Class-Path" value="${basedir}/lib/commons-csv-1.1.jar ${basedir}/lib/commons-collections4-4.0.jar ${basedir}/lib/jsoup-1.8.2.jar" />
      </manifest>
    </jar>
  </target>

  <target name="run.jar.module.helloworld.production" depends="jar.module.webcrawlingant.production">
    <java fork="true" classname="${mainClass}">
      <classpath>
        <path refid="webcrawlingant.module.production.classpath"/>
        <path location="${webcrawlingant.output.jar.dir}/${ant.project.name}_production.jar"/>
      </classpath>
    </java>
  </target>

</project>